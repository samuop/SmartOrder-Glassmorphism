# API Configuration
# URL base de la API del Cotizador
VITE_API_URL=http://localhost:3001/api

# App Branding & Company Info
# Estos valores se reflejan en la interfaz y en los documentos generados
VITE_APP_COMPANY_NAME="Cotizador App"
VITE_APP_RAZON_SOCIAL="Tu Empresa S.A."
VITE_APP_CUIT="00-00000000-0"
VITE_APP_WEBSITE="www.tuempresa.com"
VITE_APP_LEGAL_NOTICE="Este documento es una cotización proforma y no representa una factura legal."
VITE_APP_WATERMARK="COTIZACIÓN"

# Feature Flags
# Activar o desactivar funcionalidades específicas
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_AUTOSAVE=true
VITE_AUTOSAVE_DELAY=5000

# Debug Mode
# Muestra información adicional en la consola para desarrollo
VITE_DEBUG=true
